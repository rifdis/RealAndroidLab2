<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/Archive_Item_Display_Name"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:layout_height="50dp"
        android:textSize="15sp"

        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/Archive_Item_Display_date"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:layout_toRightOf="@id/Archive_Item_Display_Name"
        android:layout_marginLeft="10sp"
        />
    <TextView
        android:id="@+id/Archive_Item_Display_Title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:layout_toRightOf="@id/Archive_Item_Display_date"
        android:layout_marginLeft="10sp"
        />
    <TextView
        android:id="@+id/Archive_Item_Display_Flag"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:layout_toRightOf="@id/Archive_Item_Display_Title"
        android:layout_marginLeft="10sp"
        />

</RelativeLayout>